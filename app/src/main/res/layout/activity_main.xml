<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="mx.edu.ittepic.judamedranoba.prestap.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:id="@+id/txtBienvenida"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/presTAP"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNPrestamo"
        android:text="Nuevo Prestamo"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="#F4FF81"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCPrestamo"
        android:text="Consultar Prestamos"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="#90CAF9"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAcerca"
        android:text="Acerca de"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="#FFCC80"/>

</LinearLayout>
